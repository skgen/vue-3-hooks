{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "dist",
    "types": [
      "node",
      "jsdom"
    ],
    "declaration": false,
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.json"
  ]
}